@model IEnumerable<IndoRestaurant.Models.ScheduledBookingViewModels>

@{
    ViewBag.Title = "Manage Booking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title <a href="~/Staff/Index" style="font-size:18px !important"><span class="glyphicon glyphicon-chevron-left"></span> Back</a></h2>
<hr />
@Html.ActionLink("New Booking Request", "Index") | Scheduled | @Html.ActionLink("Cancelled", "CancelledBookings") | @Html.ActionLink("Finished", "FinishedBookings")
<table class="table">
    <tr>
        <th width="15%">
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th width="10%">
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th width="20%">
            @Html.DisplayNameFor(model => model.Time)
        </th>
        <th width="10%">
            @Html.DisplayNameFor(model => model.Persons)
        </th>
        <th width="10%">
            @Html.DisplayNameFor(model => model.TableNo)
        </th>
        <th width="10%">
            @Html.DisplayNameFor(model => model.Capacity)
        </th>
        <th width="25%"></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.FullName)<br />
        Telephone: @Html.DisplayFor(modelItem => item.Telephone)<br />
        Email: @Html.DisplayFor(modelItem => item.Email)<br />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Date)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.RealTimeStart) - @Html.DisplayFor(modelItem => item.RealTimeEnd)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Persons)
    </td>
    <td>
        @Html.DisplayFor(model => item.TableNo)
    </td>
    <td>
        @Html.DisplayFor(model => item.Capacity)
    </td>
    <td>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <input type="hidden" name="Id" id="Id" value="@Html.DisplayFor(modelItem => item.Id)" />
            <input type="radio" name="flag" id="flag" value="4" /> <span>Finish | </span>
            <input type="radio" name="flag" id="flag" value="3"> <span>Cancel | </span>
            <input type="submit" value="Submit" class="btn btn-primary" />
        }
    </td>
</tr>
    }

</table>
